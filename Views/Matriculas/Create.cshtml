@model SistemaEscolar.Models.Matricula
@{ ViewData["Title"] = "Nova Matrícula"; }
<h2>Nova Matrícula</h2>
<form asp-action="Create" method="post">
    <div class="form-group"> <label>Aluno</label> <select asp-for="AlunoId" asp-items="@(ViewData["Alunos"] as Microsoft.AspNetCore.Mvc.Rendering.SelectList)" class="form-control"></select></div>
    <div class="form-group"> <label>Turma</label> <select asp-for="TurmaId" asp-items="@(ViewData["Turmas"] as Microsoft.AspNetCore.Mvc.Rendering.SelectList)" class="form-control"></select></div>
    <div class="form-group"> <label asp-for="DataMatricula"></label> <input asp-for="DataMatricula" type="date" class="form-control"/></div>
    <div class="form-group"> <label asp-for="Situacao"></label> <input asp-for="Situacao" class="form-control"/></div>
    <button class="btn">Matricular</button> <a class="btn" href="@Url.Action("Index")">Cancelar</a>
</form>
<partial name="_ValidationScriptsPartial" />
