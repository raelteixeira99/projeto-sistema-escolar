@model SistemaEscolar.Models.Professor
@{ ViewData["Title"] = "Editar Professor"; }
<h2>Editar Professor</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group"> <label asp-for="Nome"></label> <input asp-for="Nome" class="form-control"/> </div>
    <div class="form-group"> <label asp-for="Disciplina"></label> <input asp-for="Disciplina" class="form-control"/> </div>
    <button class="btn">Salvar</button> <a class="btn" href="@Url.Action("Index")">Cancelar</a>
</form>
<partial name="_ValidationScriptsPartial" />
