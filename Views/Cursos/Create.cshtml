@model SistemaEscolar.Models.Curso
@{ ViewData["Title"] = "Novo Curso"; }
<h2>Novo Curso</h2>
<form asp-action="Create" method="post">
    <div class="form-group"> <label asp-for="Nome"></label> <input asp-for="Nome" class="form-control" /> <span asp-validation-for="Nome" class="text-danger"></span></div>
    <div class="form-group"> <label asp-for="DuracaoSemestres">Duração (semestres)</label> <input asp-for="DuracaoSemestres" class="form-control" type="number"/></div>
    <button class="btn">Salvar</button> <a class="btn" href="@Url.Action("Index")">Cancelar</a>
</form>
<partial name="_ValidationScriptsPartial" />
