@model IEnumerable<SistemaEscolar.Models.Aluno>
@{ ViewData["Title"] = "Alunos"; }
<h2>Alunos</h2>
<form method="get" action="">
    <input type="text" name="busca" value="@Context.Request.Query["busca"]" placeholder="Buscar por nome..." />
    <button type="submit">Buscar</button>
    <a class="btn" href="@Url.Action("Create")">Novo aluno</a>
</form>
<table class="table">
    <thead><tr><th>Nome</th><th>Email</th><th>Ativo</th><th></th></tr></thead>
    <tbody>
    @foreach(var a in Model){
        <tr><td>@a.Nome</td><td>@a.Email</td><td>@(a.Ativo?"Sim":"NÃ£o")</td>
        <td><a href="@Url.Action("Edit", new { id = a.Id })">Editar</a> | <a href="@Url.Action("Details", new { id = a.Id })">Ver</a> | <a href="@Url.Action("Delete", new { id = a.Id })">Excluir</a></td></tr>
    }
    </tbody>
</table>
