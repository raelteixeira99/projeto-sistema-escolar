@model SistemaEscolar.Models.Turma
@{ ViewData["Title"] = "Editar Turma"; }
<h2>Editar Turma</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group"> <label asp-for="Codigo"></label> <input asp-for="Codigo" class="form-control"/> </div>
    <div class="form-group"> <label>Curso</label> <select asp-for="CursoId" asp-items="@(ViewData["Cursos"] as Microsoft.AspNetCore.Mvc.Rendering.SelectList)" class="form-control"></select></div>
    <div class="form-group"> <label>Professor (opcional)</label> <select asp-for="ProfessorId" asp-items="@(ViewData["Professores"] as Microsoft.AspNetCore.Mvc.Rendering.SelectList)" class="form-control"><option value="">-- nenhum --</option></select></div>
    <div class="form-group"> <label asp-for="Inicio"></label> <input asp-for="Inicio" type="date" class="form-control"/></div>
    <button class="btn">Salvar</button> <a class="btn" href="@Url.Action("Index")">Cancelar</a>
</form>
<partial name="_ValidationScriptsPartial" />
